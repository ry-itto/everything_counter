# Uncomment the next line to define a global platform for your project
platform :ios, '13.0'

target 'EverythingCounter' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for EverythingCounter
  pod 'ReactorKit'
  pod 'RxCocoa', '~> 4.0'
  pod 'RxRealm'
  pod 'RxKeyboard'
  pod 'LicensePlist'
  pod 'SwiftLint'

  target 'EverythingCounterTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'EverythingCounterUITests' do
    inherit! :search_paths
    # Pods for testing
    pod 'ReactorKit'
    pod 'RxRealm'
    pod 'RxCocoa', '~> 4.0'
    pod 'RxKeyboard'
  end

  target 'EveryThingCounterWidget' do
    pod 'RealmSwift'
  end

end
